# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.js, **/*.js]
indent_size = 2
indent_style = space

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Visual Studio Solution Files
[*.php]
indent_style = space
indent_size = 2

# GIT
[COMMIT_EDITMSG]
indent_size              = 4
indent_style             = space
max_line_length          = 80

# 4 space indentation
[*.py]
indent_style = space
indent_size = 2

[Vagrantfile]
indent_size = 2
